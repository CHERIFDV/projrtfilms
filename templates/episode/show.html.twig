            <tr>
                <th>Nb_view</th>
                <td>{{ episode.NbView }}</td>
            </tr>
            <tr>
                <th>Langue</th>
                <td>{{ episode.langue }}</td>
            </tr>
            <tr>
                <th>Numero_episode</th>
                <td>{{ episode.NumeroEpisode }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ episode.image }}</td>
            </tr>
            <tr>
                <th>Nb_commenter</th>
