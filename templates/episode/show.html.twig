            <tr>
                <th>Resume</th>
                <td>{{ episode.Resume }}</td>
            </tr>
            <tr>
                <th>Realise</th>
                <td>{{ episode.Realise }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ episode.url }}</td>
